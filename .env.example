# ═══════════════════════════════════════════════
#   Friday AI — Configuration
# ═══════════════════════════════════════════════

# REQUIRED
GROQ_API_KEY=your_groq_api_key_here

# IDENTITY
AGENT_NAME=Friday
USER_NAME=User
TIMEZONE=America/New_York

# MODEL
MODEL=meta-llama/llama-4-scout-17b-16e-instruct
MAX_TOKENS=8192
TEMPERATURE=0.1
MAX_TOOLS=128   # Groq API limit; reduce if you hit tool count errors

# PERSONA: assistant | developer | analyst | researcher
DEFAULT_PERSONA=assistant

# MEMORY
MEMORY_DIR=~/.friday/memory
MAX_MEMORY_ITEMS=5000

# PROACTIVE
MORNING_BRIEFING=true
MORNING_BRIEFING_TIME=08:00
EVENING_SUMMARY=true
EVENING_SUMMARY_TIME=21:00
ENABLE_REMINDERS=true
ANOMALY_ALERTS=true
CPU_ALERT_THRESHOLD=90
RAM_ALERT_THRESHOLD=90
DISK_ALERT_THRESHOLD=90

# FLASK BRIDGE (for Chrome extension)
FLASK_PORT=7723
FLASK_HOST=127.0.0.1

# LOCAL DASHBOARD
DASHBOARD_PORT=7724

# TELEGRAM (optional)
# TELEGRAM_TOKEN=your_token
# TELEGRAM_CHAT_ID=your_chat_id

# PROFILE: home | work
PROFILE=home

# DESKTOP NOTIFICATIONS
DESKTOP_NOTIFICATIONS=true

# PROCESS WATCHER
PROCESS_WATCH_INTERVAL=30
